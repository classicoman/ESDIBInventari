{% extends "ESDIBInventariBundle:Items:layout.html.twig" %}


{% block select_rows %}
        <select id="max_rows">
            <option value="5"  {{select_rows[0]}}> 5</option>
            <option value="10" {{select_rows[1]}}>10</option>
            <option value="15" {{select_rows[2]}}>15</option>
            <option value="20" {{select_rows[3]}}>20</option>
        </select>
{% endblock %}


{% block rotuls %}
{# Aquest boci de codi llista els items #}
    {% for rotul in rotuls %}
	   <td>{{rotul}}</td>
	{% endfor %}
{% endblock %}

{% block files %}
    {# Aquest boci de codi llista els items #}
    {% for fila in files %}
	<tr>
            <td>{{fila.id}}</td><td>
	   <td>{{fila.nom}}</td>
	   <td>{{fila.preu}}</td>
           <td><a href="{{ path('addedit_item', {'id': fila.id}) }}"><img src="{{ asset('images/edit.jpg') }}" /></a></td>
           <td><img src="{{ asset('images/delete.gif') }}" /></td>
	</tr>	
    {% endfor %}
{% endblock %}